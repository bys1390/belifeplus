<Window x:Class="belifeplus.ContractDeleteView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:belifeplus"
        mc:Ignorable="d"
        Title="ContractDeleteView" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Image Source="content/placeholder.png" Margin="10" Stretch="Fill"/>

        <TextBox Name="TbNumero" Grid.Row="1" Margin="10" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Button Name="BtnAnularContrato" Grid.Row="1" Grid.Column="1" Margin="10" Click="BtnAnularContrato_Click">
            <Grid>
               
                <Image Source="content/placeholder.png" Stretch="Fill"/>
               
            </Grid>
        </Button>
    </Grid>
</Window>
